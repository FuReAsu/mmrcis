@model mmrcis.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this patient?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Person.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Person.FullName)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Person.Address)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Person.Address)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Person.PhoneNumber)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Person.PhoneNumber)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Person.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Person.Email)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Person.DOB)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Person.DOB)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Person.Sex)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Person.Sex)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Person.BloodGroup)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Person.BloodGroup)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PatientSince)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PatientSince)</dd>
    </dl>
    <form asp-area="Operator" asp-controller="Patient" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="PersonID" />
        <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
        <a asp-area="Operator" asp-controller="Patient" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
