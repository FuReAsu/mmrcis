@model IEnumerable<mmrcis.Models.Patient>

@{
		ViewData["Title"] = "Manage Patients";
		Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Patients</h1>
<p>
	<a asp-area="Operator" asp-controller="Patient" asp-action="Create" class="btn btn-sm btn-primary">Create New Patient</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-bordered mt-3">
		<thead>
				<tr>
						<th>@Html.DisplayNameFor(model => model.Person.FullName)</th>
						<th>@Html.DisplayNameFor(model => model.Person.PhoneNumber)</th>
						<th>@Html.DisplayNameFor(model => model.Person.Email)</th>
						<th>@Html.DisplayNameFor(model => model.Status)</th>
						<th>@Html.DisplayNameFor(model => model.PatientSince)</th>
						<th>Actions</th>
				</tr>
		</thead>
		<tbody>
				@foreach (var item in Model)
				{
						<tr>
								<td>@Html.DisplayFor(modelItem => item.Person.FullName)</td>
								<td>@Html.DisplayFor(modelItem => item.Person.PhoneNumber)</td>
								<td>@Html.DisplayFor(modelItem => item.Person.Email)</td>
								<td>@Html.DisplayFor(modelItem => item.Status)</td>
								<td>@Html.DisplayFor(modelItem => item.PatientSince)</td>
								<td>
										<a asp-area="Operator" asp-controller="Patient" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info">Edit</a> |
										<a asp-area="Operator" asp-controller="Patient" asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-secondary">Details</a> |
										<a asp-area="Operator" asp-controller="Patient" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>
								</td>
						</tr>
				}
		</tbody>
</table>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
