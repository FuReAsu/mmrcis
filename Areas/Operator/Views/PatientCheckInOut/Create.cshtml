@model mmrcis.Areas.Operator.Models.PatientCheckInOutViewModel

@{
    ViewData["Title"] = "Create Patient Check In/Out";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="PatientID"></label>
        <select asp-for="PatientID" class="form-control" asp-items="ViewBag.Patients"></select>
        <span asp-validation-for="PatientID" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AppointmentID"></label>
        <select asp-for="AppointmentID" class="form-control" asp-items="ViewBag.Appointments"></select>
        <span asp-validation-for="AppointmentID" class="text-danger"></span>
    </div> 
    
    <div class="form-group mb-3">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" /> 
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CheckInTime"></label>
        <input asp-for="CheckInTime" class="form-control timepicker" type="text" />
        <span asp-validation-for="CheckInTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CheckOutTime"></label>
        <input asp-for="CheckOutTime" class="form-control timepicker" type="text" />
        <span asp-validation-for="CheckOutTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Remarks"></label>
        <textarea asp-for="Remarks" class="form-control"></textarea>
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-area="Operator" asp-controller="PatientCheckInOut" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr(".timepicker", {
                enableTime: true,
                noCalendar: true, 
                dateFormat: "H:i", 
                time_24hr: true, 
                minuteIncrement: 15 
            });
        });
    </script>
}
