@model mmrcis.Areas.Operator.Models.PatientCheckInOutViewModel

@{
    ViewData["Title"] = "Add Patient Check Out";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="ID" />

    <div class="form-group mb-3">
        <label asp-for="CheckOutTime"></label>
        <input asp-for="CheckOutTime" class="form-control timepicker" type="text" />
        <span asp-validation-for="CheckOutTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Remarks"></label>
        <textarea asp-for="Remarks" class="form-control"></textarea>
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-area="Operator" asp-controller="PatientCheckInOut" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            flatpickr(".timepicker", {
                enableTime: true,
                noCalendar: true, 
                dateFormat: "H:i", 
                time_24hr: true, 
                minuteIncrement: 15 
            });
        });
    </script>
}
