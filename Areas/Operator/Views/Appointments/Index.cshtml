@* Areas/Operator/Views/Appointments/Index.cshtml *@
@model IEnumerable<mmrcis.Models.Appointment>

@{
    ViewData["Title"] = "Manage Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Appointments</h1>

<p>
    <a asp-area="Operator" asp-controller="Appointments" asp-action="Create" class="btn btn-primary">Create New Appointment</a>
</p>

<table class="table table-striped table-bordered mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorStaff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookedAt)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Person.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorStaff.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookedAt)
                </td>
                <td>
                    <a asp-area="Operator" asp-controller="Appointments" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-info">Edit</a> |
                    <a asp-area="Operator" asp-controller="Appointments" asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-secondary">Details</a> |
                    <a asp-area="Operator" asp-controller="Appointments" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
