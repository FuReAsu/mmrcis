@model mmrcis.Models.CostRate
@{
		ViewData["Title"] = "Edit Patient";
		Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
		<div class="col-md-6">
			<form asp-action="Edit">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for"ID" />
					<input type="hidden" asp-for"RegisteredSince" />
					<div class="form-group">
							<label asp-for="CostType" class="control-label"></label>
							<input asp-for="CostType" class="form-control" />
							<span asp-validation-for="CostType" class="text-danger"></span>
					</div>
					<div class="form-group">
							<label asp-for="UnitCost" class="control-label"></label>
							<input asp-for="UnitCost" class="form-control" />
							<span asp-validation-for="UnitCost" class="text-danger"></span>
					</div>
					<div class="form-group">
							<label asp-for="Description" class="control-label"></label>
							<input asp-for="Description" class="form-control" />
							<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="form-check">
						<input asp-for="IsActive" class="form-check-input"></input>
						<label asp-for="IsActive" class="form-check-label"></label>
					<div>
					<div class="form-group mt-3">
							<input type="submit" value="Save" class="btn btn-primary" />
							<a asp-action="Index" class="btn btn-secondary">Back to List</a>
					</div>
			</form>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
