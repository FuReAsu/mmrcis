@model mmrcis.Models.CostRate

@{
		ViewData["Title"] = "Delete CostRate";
		Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CostType)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CostType)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UnitCost)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UnitCost)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RegisteredSince)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RegisteredSince)</dd>
    </dl>
    <form asp-area="Admin" asp-controller="CostRate" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
        <a asp-area="Admin" asp-controller="CostRate" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
