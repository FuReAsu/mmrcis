@model mmrcis.Areas.Admin.Models.StaffListViewModel
@{
    ViewData["Title"] = "Delete Staff";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this staff member?</h3>
<div class="alert alert-danger" role="alert">
    <strong>Warning:</strong> Deleting a staff member will also remove their associated personal details (Person record). This action cannot be undone.
</div>

<div>
    <h4>Staff Member Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PersonType)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.PersonType)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Roles)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Roles)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegisteredSince)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.RegisteredSince)</dd>
    </dl>

    <form asp-area="Admin" asp-controller="Staff" asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
        <a asp-area="Admin" asp-controller="Staff" asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
