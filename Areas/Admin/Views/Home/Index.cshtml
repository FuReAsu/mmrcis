@* Areas/Admin/Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "Admin Portal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome to the Admin Portal!</h1>

<p>
    From here, you can perform administrative tasks. Click the buttons below to go to the desired administrative page.
</p>

<div class="row mt-4">

    @* Card for Manage Staff Accounts *@
    <div class="col-md-4 mb-4"> @* col-md-4 for 3 cards per row on medium screens and up *@
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Manage Staff Accounts</h5>
            </div>
            <div class="card-body d-grid"> @* d-grid for full-width button *@
                <p class="card-text">Create, view, edit, or delete staff user accounts and their associated profiles.</p>
                <a asp-area="Admin" asp-controller="Staff" asp-action="Index" class="btn btn-primary mt-auto">Go to Staff Management</a> @* mt-auto pushes button to bottom *@
            </div>
        </div>
    </div>

    @* Card for Manage Services *@
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Manage Services Offered</h5>
            </div>
            <div class="card-body d-grid">
                <p class="card-text">Define and organize the medical services provided by the clinic.</p>
                <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="btn btn-primary mt-auto">Go to Services</a>
            </div>
        </div>
    </div>

    @* Card for Manage Cost Rates *@
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Manage Cost Rates</h5>
            </div>
            <div class="card-body d-grid">
                <p class="card-text">Set and adjust the pricing for various medical services and procedures.</p>
                <a asp-area="Admin" asp-controller="CostRates" asp-action="Index" class="btn btn-primary mt-auto">Go to Cost Rates</a>
            </div>
        </div>
    </div>

    @* Card for Manage Suppliers *@
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Manage Suppliers</h5>
            </div>
            <div class="card-body d-grid">
                <p class="card-text">Keep track of vendors and suppliers for medical equipment, drugs, and other clinic needs.</p>
                <a asp-area="Admin" asp-controller="Suppliers" asp-action="Index" class="btn btn-primary mt-auto">Go to Suppliers</a>
            </div>
        </div>
    </div>

    @* Card for Manage Inventory Items *@
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">Manage Inventory Items</h5>
            </div>
            <div class="card-body d-grid">
                <p class="card-text">Maintain records of all medical supplies, drugs, and equipment in stock.</p>
                <a asp-area="Admin" asp-controller="InventoryItems" asp-action="Index" class="btn btn-primary mt-auto">Go to Inventory</a>
            </div>
        </div>
    </div>

    @* You can add more cards here for other administrative functions like System Settings, Reports, etc. *@
    @* Example for a 'System Settings' card:
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0">System Settings</h5>
            </div>
            <div class="card-body d-grid">
                <p class="card-text">Configure application-wide settings and parameters.</p>
                <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="btn btn-primary mt-auto">Go to Settings</a>
            </div>
        </div>
    </div>
    *@

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
